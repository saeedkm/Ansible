---
- hosts: localhost
  gather_facts: no

  tasks:
  - name: get the list of users
    local_action: shell ls -al /elk_data/ansible/keys/ |awk '{print $9}'| cut -f1 -d '.'|grep -v '^$'
    register: users
  - name: test the list
    debug:
      msg: users

  - lineinfile: 
      path: /elk_data/test2
      regex: "^{{ item }}"
      line: '{{ item }}   ALL=(ALL)       NOPASSWD{{:}} ALL'
      become: yes
      insertafter: EOF
      with_items: "{{ users.stdout_lines }}"
